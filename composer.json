{
    "name": "bright-components/actions",
    "description": "Invokable actions. Not controllers.",
    "version": "0.1.1",
    "keywords": [
        "bright-components",
        "actions",
        "adr",
        "Laravel"
    ],
    "homepage": "https://github.com/bright-components/actions",
    "license": "MIT",
    "authors": [
        {
            "name": "Clayton Stone",
            "email": "clay@phpstage.com",
            "homepage": "https://codestage.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BrightComponents\\Actions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrightComponents\\Actions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrightComponents\\Actions\\ActionServiceProvider"
            ]
        }
    }
}
